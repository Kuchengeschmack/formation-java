<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="3.1"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">


	<!-- Declaration du listener (ecouteur qui sert à charger le fichier de 
		config de spring IoC -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<!-- Specifier le chemin du fichier de config du context spring IoC afin 
		que le conteneur web puisse le charger -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/application-context.xml</param-value>
	</context-param>

	<!-- Declaration de la servlet unique de srping MVC: DispatcherServlet -->
	<servlet>
		<servlet-name>unique</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>

		<!-- Specifier le chemin du fichier de config du context de spring MVC -->
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/mvc-context.xml</param-value>
		</init-param>

	</servlet>

	<!-- Le mapping de la servlet unique de spring mvc -->
	<servlet-mapping>
		<servlet-name>unique</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	
	<!-- Déclaration de la page d'accueil -->
	<welcome-file-list>
	<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	

</web-app>